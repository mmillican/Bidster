@model Bidster.Models.Events.EventListViewModel

@{
    ViewBag.Title = "Events";
}

@if (Model.CanCreateEvent)
{
    <p>
        <a asp-action="Create" class="btn btn-success">New Event</a>
    </p>
}

<table class="table table-sm table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Display On</th>
            <th>Start</th>
            <th>End</th>
        </tr>
    </thead>
    @foreach (var evt in Model.Events)
    {
        <tr>
            <td>
                <a asp-action="Details" asp-route-slug="@evt.Slug">@evt.Name</a>
            </td>
            <td>@evt.DisplayOn.ToString("d")</td>
            <td>@evt.StartOn.ToString("d")</td>
            <td>@evt.EndOn.ToString("d")</td>
        </tr>
    }
</table>