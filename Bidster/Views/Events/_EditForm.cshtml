@model Bidster.Models.Events.EditEventViewModel

<div class="form-group">
    <label asp-for="Name"></label>
    <input type="text" asp-for="Name" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="Description"></label>
    <kendo-editor for="Description" deferred="true" encoded="false">
        <tools>
            <tool name="formatting" />
            <tool name="bold" />
            <tool name="italic" />
            <tool name="underline" />
            <tool name="insertUnorderedList" />
            <tool name="insertOrderedList" />
            <tool name="indent" />
            <tool name="outdent" />
            <tool name="createLink" />
            <tool name="unlink" />
        </tools>
    </kendo-editor>
</div>
<div class="form-group">
    <label asp-for="StartOn" class="form-label"></label>
    <kendo-datetimepicker for="StartOn" deferred="true" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="EndOn"></label>
    <kendo-datetimepicker for="EndOn" deferred="true" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="DisplayOn"></label>
    <kendo-datetimepicker for="DisplayOn" deferred="true" class="form-control" />
    <span class="text-muted">Enter the date on which you would like this event to appear on the site.</span>
</div>
<div class="form-group">
    <label asp-for="DefaultMinimumBidAmount"></label>
    <input type="text" asp-for="DefaultMinimumBidAmount" class="form-control" />
    <span class="text-muted">If set, new items for this event will use this as the min. bid amount. Value can be changed per item.</span>
</div>
<div class="checkbox">
    <label asp-for="HideBidderNames">
        <input asp-for="HideBidderNames" />
        Hide bidder names
        <span class="text-muted">(Names are still visible to event admins)</span>
    </label>
</div>