@model Bidster.Models.Products.EditProductViewModel

@{
    ViewBag.Title = "Edit Product";
}

<h1>@Model.EventName - New Product</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" asp-route-evtSlug="@Model.EventSlug" asp-route-id="@Model.Id" method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="StartingPrice"></label>
                @if (!Model.HasBids)
                {
                    <input type="text" asp-for="StartingPrice" class="form-control" />
                }
                else
                {
                    <input type="text" asp-for="StartingPrice" class="form-control" readonly />
                }
            </div>
            <div class="form-group">
                <label asp-for="MinimumBidAmount"></label>
                @if (!Model.HasBids)
                {
                    <input type="text" asp-for="MinimumBidAmount" class="form-control" />
                }
                else
                {
                    <input type="text" asp-for="MinimumBidAmount" class="form-control" readonly />
                }
            </div>

            <button type="submit" class="btn btn-primary">Save Product</button>
        </form>
    </div>
</div>
