@model Bidster.Models.Products.EditProductViewModel

@{
    ViewBag.Title = "New Product";
}

<h1>@Model.EventName - New Product</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" asp-route-evtSlug="@Model.EventSlug" method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="StartingPrice"></label>
                <input type="text" asp-for="StartingPrice" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="MinimumBidAmount"></label>
                <input type="text" asp-for="MinimumBidAmount" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Create Product</button>
        </form>
    </div>
</div>
