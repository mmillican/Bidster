@{ 
    var notices = TempData.GetTempData<List<NoticeModel>>("_Notices") ?? new List<NoticeModel>();
}

<div class="cms-notices" id="cms-notices">
    @foreach (var notice in notices)
    {
        <div class="alert @notice.Type">
            @Html.Raw(notice.Message)
        </div>
    }

    <div v-for="notif in notifications" class="alert" v-bind:class="notif.type">
        <span v-html="notif.text"></span>
    </div>
</div>